rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if true; // Public read access for all files
    }
    
    // Category icons - Allow authenticated users to upload
    match /category_icons/{iconFile} {
      allow write: if request.auth != null;
    }
    
    // Product images - Allow authenticated users to upload
    match /product_images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Inventory images - Allow authenticated users to upload
    match /inventory_images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Blog images - Allow authenticated users to upload  
    match /blog_images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Media/uploads - Allow authenticated users to upload
    match /uploads/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // User uploads - Allow authenticated users to upload their own files
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
